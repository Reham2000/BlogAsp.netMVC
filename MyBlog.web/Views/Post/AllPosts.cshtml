@using MyBlog.domain.Models
@model List<Post>



<table class="table table-bordered table-hover text-center">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-warning text-white" ><i class="bi bi-pencil-fill"></i></a>
                    <a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-primary text-white"><i class="bi bi-card-list"></i></a>
                    <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger text-white"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model PostViewModel
<div class="row">
    <div class="col-lg-12 container">
        <div class="form-wrapper" data-aos="fade-up" data-aos-delay="400">
            <form asp-action="Create" method="post" enctype="multipart/form-data" >
                <div class="row justify-content-center">
                    <h2 class="text-center">Create Post</h2>
                    <div class="col-md-8 form-group">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input type="text" asp-for="Post.Title"  class="form-control" placeholder="Title*" >
                        </div>
                            <span asp-validation-for="Post.Title" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-8 form-group mt-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-chat-dots"></i></span>
                            <textarea asp-for="Post.Content" class="form-control"  rows="6" placeholder="Write a Content*"></textarea>
                        </div>
                            <span asp-validation-for="Post.Content" class="text-danger"></span>
                    </div>
                    <div class="col-md-8 form-group mt-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input type="file" asp-for="MyImage"  class="form-control">
                    </div>
                    <span asp-validation-for="MyImage" class="text-danger"></span>
                    </div>
                    <div class="col-md-8 form-group mt-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <select asp-for="Post.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,"Value","Text"))" >
                            <option value="" selected disabled>Select Category</option>
                        </select>
                    </div>
                    <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
                    </div>
                    <div class=" form-group"> 
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div> 
                </div>
                @* <button type="submit" class="btn btn-primary my-3 w-25">Create</button> *@
                @* <input type="submit" class="btn btn-primary my-3 w-25" value="Create"/> *@
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



